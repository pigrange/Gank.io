<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/background"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/icon_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/icon_head" />

    <TextView
        android:id="@+id/nav_header_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pigrane"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/icon_image" />

    <TextView
        android:id="@+id/nav_header_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="https://github.com/pigrange"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/nav_header_text1" />
</android.support.constraint.ConstraintLayout>
